<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- background -->
    <item android:id="@android:id/background">
        <selector>
            <item android:state_enabled="true" android:drawable="@drawable/gm__scrubber_background_default_reference"/>
        </selector>
    </item>

    <!-- secondary progress -->
    <item android:id="@android:id/secondaryProgress">
        <selector>
            <item android:state_enabled="true" android:drawable="@drawable/gm__scrubber_secondary_reference"/>
        </selector>
    </item>

    <!-- progress -->
    <item android:id="@android:id/progress">
        <selector>
            <item android:state_enabled="false" android:drawable="@drawable/gm__scrubber_background_disabled_reference"/>
            <item android:state_enabled="true" android:drawable="@drawable/gm__scrubber_progress_reference"/>
        </selector>
    </item>
</layer-list>